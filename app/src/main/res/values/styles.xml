<resources>

    <!-- Application theme -->
    <style name="Theme.Capstone2" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorAccent</item>
        <!-- Menu background color -->
        <item name="android:itemBackground">@color/colorPrimary</item>
        <!-- Custom navigation managed by NavigationComponent-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Capstone2.Title">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/s_title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.Capstone2.CharacteristicTitle">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/s_characteristic_title</item>
    </style>

    <style name="Theme.Capstone2.CharacteristicValue">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/s_subtitle</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
